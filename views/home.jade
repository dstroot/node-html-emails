extends layout

block content
  h1 Bootstrap starter template
  p.lead
    | Use this document as a way to quickly start any new project.
    br
    | All you get is this text and a mostly barebones HTML document.

  if user
    .alert.alert-success.animated.flipInX
      i.fa.fa-check
      strong Success!
      |  You are logged in.

  .page-header
    h3 Contact Form

  form.form-horizontal(role='form', method='POST')
    .form-group
      label(class='col-sm-2 control-label', for='email') Name
      .col-sm-8
        input.form-control(type='name', name='name', id='name', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='email') Email
      .col-sm-8
        input.form-control(type='text', name='email', id='email')
    .form-group
      label(class='col-sm-2 control-label', for='contactBody') Body
      .col-sm-8
        textarea.form-control(type='text', name='message', id='message', rows='7')
    .form-group
        input.form-control(type='hidden', name='_csrf', value=token)
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-default(type='submit')
          i.fa.fa-mail-forward
          | Send
        img.pull-right(height='34', src='/img/sendgrid.png')